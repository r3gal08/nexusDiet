{
  "manifest_version": 3,
  "name": "Nexus Diet - Information Dashboard",
  "version": "1.0",
  "description": "Track your information diet based on what you browse.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}